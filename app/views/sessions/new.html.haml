- provide(:title, "Entrar")
.container
	%h1.form-signin-heading Entrar!
	= form_for(:session, url: sessions_path, html:{class:"form-signin"}) do |f|
		= f.text_field :email, class:"form-control", placeholder:"email"
		= f.password_field :password, class:"form-control",placeholder:"password"
		= f.submit "Entrar", class:"btn btn-lg btn-primary btn-block"
		%p Nuevo usuario? #{link_to "Registrarse", registrarse_path}